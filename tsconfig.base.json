{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "typeRoots": ["./ts-declarations", "./node_modules/@types", "../../node_modules/@types", "../../ts-declarations"]
  }
}
