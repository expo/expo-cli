{
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["ES2017"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "skipLibCheck": true,
    "typeRoots": ["./ts-declarations", "node_modules/@types", "../../node_modules/@types"]
  }
}
