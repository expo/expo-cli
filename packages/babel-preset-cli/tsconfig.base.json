{
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["ES2016"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2016",
    "typeRoots": ["ts-declarations", "node_modules/@types"]
  }
}
