{
  "extends": "../../tsconfig.base",
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__/*",
    "**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "noImplicitAny": false,
    "outDir": "build/server",
    "rootDir": "server",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
